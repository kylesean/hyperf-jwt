{
  "name": "friendsofhyperf/jwt",
  "description": "A JWT (JSON Web Token) package for Hyperf,inspired by tymondesigns/jwt-auth.",
  "type": "library",
  "license": "MIT",
  "keywords": [
    "php",
    "hyperf",
    "jwt",
    "json web token"
  ],
  "authors": [
    {
      "name": "kylesean",
      "email": "jkxsai@gmail.com"
    }
  ],
  "require": {
    "php": ">=8.1",
    "lcobucci/clock": "^3.0",
    "lcobucci/jwt": "^4.0 || ^5.0"
  },
  "require-dev": {
    "friendsofphp/php-cs-fixer": "^3.0",
    "hyperf/cache": "^3.0 || ^3.1",
    "hyperf/command": "^3.1@alpha",
    "hyperf/contract": "^3.0 || ^3.1",
    "hyperf/framework": "^3.0 || ^3.1",
    "hyperf/http-server": "^3.1",
    "phpstan/phpstan": "^1.0",
    "phpunit/phpunit": "^9.0 || ^10.0",
    "psr/container": "^1.0 || ^2.0",
    "psr/simple-cache": "^1.0 || ^2.0 || ^3.0",
    "swoole/ide-helper": "dev-master",
    "symfony/var-dumper": "^6.0"
  },
  "autoload": {
    "psr-4": {
      "FriendsOfHyperf\\Jwt\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "FriendsOfHyperf\\Jwt\\Tests\\": "tests/"
    }
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "config": {
    "optimize-autoloader": true,
    "sort-packages": true
  },
  "scripts": {
    "test": "phpunit -c phpunit.xml --colors=always",
    "analyse": "phpstan analyse --memory-limit 1024M -l 0 -c phpstan.neon ./src ./tests",
    "cs-fix": "php-cs-fixer fix $1"
  },
  "extra": {
    "hyperf": {
      "config": "FriendsOfHyperf\\Jwt\\ConfigProvider"
    }
  }
}
